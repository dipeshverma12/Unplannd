<%- layout('layouts/boilerplate') %>
<style>
    /* --- Root Variables for Theme Consistency --- */
    :root {
        --retro-bg: wheat; /* Main background and outer box */
        --retro-text: #1F2937; /* Dark text for contrast */
        --retro-accent-red: #d1451e; /* From box shadow, button hover */
        --retro-accent-yellow: #FFD93D; /* From previous accent, price underline */
        --retro-primary-teal: #2F9C95; /* From your card background */
        --retro-secondary-light: #fff; /* From box shadow white */
        --retro-shadow-dark: #000; /* From box shadow black */
        --retro-shadow-light: rgba(0, 0, 0, 0.2); /* For softer elements, box-shadow opacity */

        /* Fonts */
        --font-primary: "Inter", sans-serif;
        --font-heading-retro: 'Press Start 2P', cursive; /* For titles and buttons */

        /* Transitions */
        --transition-fast: 0.2s ease;
        --transition-medium: 0.3s ease;
        --transition-slow: 0.6s ease;
    }

    /* --- General Body Styling --- */
    body {
        background-color: var(--retro-bg);
        font-family: var(--font-primary);
        color: var(--retro-text);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start; /* Align to top for longer content */
        box-sizing: border-box;
    }

    img {
        image-rendering: pixelated;
        image-rendering: -moz-crisp-edges;
        image-rendering: -o-crisp-edges;
        image-rendering: -webkit-optimize-contrast;
        -ms-interpolation-mode: nearest-neighbor;
    }

    /* --- Profile Container --- */
    .profile-container {
        width: 100%;
        max-width: 800px;
        background-color: var(--retro-primary-teal);
        padding: 2.5em;
        border-radius: 15px;
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.6em 0 0 var(--retro-accent-red),
            0 0.6em 0 0.15em var(--retro-shadow-dark);
        margin: 2rem auto;
        box-sizing: border-box;
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
        animation: profileEntry 0.8s ease-out;
    }

    @keyframes profileEntry {
        0% { opacity: 0; transform: translateY(30px) scale(0.95); }
        100% { opacity: 1; transform: translateY(0) scale(1); }
    }

    .profile-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2em;
        padding-bottom: 1.5em;
        border-bottom: 3px dashed var(--retro-accent-yellow);
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid var(--retro-accent-red);
        box-shadow: 0 0 0 3px var(--retro-shadow-dark), 0 5px 15px rgba(0, 0, 0, 0.4);
        margin-bottom: 1em;
        transition: transform var(--transition-medium);
    }

    .profile-avatar:hover {
        transform: scale(1.05) rotate(2deg);
    }

    .profile-username {
        font-family: var(--font-heading-retro);
        font-size: 2.5em;
        color: var(--retro-text);
        text-shadow: 3px 3px 0 rgba(0, 0, 0, 0.5);
        margin: 0.5em 0 0.2em;
        line-height: 1.1;
    }

    .profile-name {
        font-family: var(--font-primary);
        font-size: 1.2em;
        color: rgba(0, 0, 0, 0.7);
        text-shadow: none;
        margin-bottom: 1em;
    }

    .profile-stats {
        display: flex;
        justify-content: center;
        gap: 2em;
        margin-top: 1em;
        font-family: var(--font-heading-retro);
        font-size: 1em;
        color: var(--retro-text);
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
    }

    .profile-stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--retro-secondary-light);
        padding: 0.8em 1.2em;
        border-radius: 8px;
        border: 2px solid var(--retro-shadow-dark);
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
    }

    .profile-stat-item .count {
        font-size: 1.5em;
        color: var(--retro-accent-red);
        margin-bottom: 0.2em;
    }

    .profile-stat-item .label {
        font-size: 0.8em;
        text-transform: uppercase;
    }

    .profile-actions {
        display: flex;
        justify-content: center;
        gap: 1.5em;
        margin-top: 2em;
        flex-wrap: wrap;
    }

    .profile-action-button {
        position: relative;
        background: var(--retro-accent-red);
        color: var(--retro-secondary-light);
        font-family: var(--font-heading-retro);
        font-size: 1em;
        font-weight: 700;
        padding: 0.8em 1.5em;
        border: 0.25em solid var(--retro-shadow-dark);
        border-radius: 0.5em;
        box-shadow: 0.4em 0.4em 0 var(--retro-shadow-dark);
        cursor: pointer;
        transition: all var(--transition-fast);
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.6);
        text-decoration: none;
        display: inline-block;
    }

    .profile-action-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.3) 50%,
            transparent 100%
        );
        transition: left var(--transition-medium);
        z-index: 1;
    }

    .profile-action-button:hover {
        background: var(--retro-shadow-dark);
        color: var(--retro-accent-yellow);
        transform: translate(-0.2em, -0.2em);
        box-shadow: 0.6em 0.6em 0 var(--retro-accent-red);
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.8);
    }

    .profile-action-button:active {
        transform: translate(0.15em, 0.15em);
        box-shadow: 0.2em 0.2em 0 var(--retro-shadow-dark);
    }

    /* --- Glimmer Lists Section --- */
    .glimmer-lists-section {
        margin-top: 3em;
        width: 100%;
        max-width: 900px;
        display: flex;
        flex-direction: column;
        gap: 2.5em;
    }

    .glimmer-list-card {
        background-color: var(--retro-primary-teal);
        padding: 2em;
        border-radius: 15px;
        box-shadow:
            0 0 0 0.15em var(--retro-shadow-dark),
            0 0 0 0.3em var(--retro-secondary-light),
            0 0 0 0.45em var(--retro-shadow-dark),
            0 0.5em 0 0 var(--retro-accent-red),
            0 0.5em 0 0.15em var(--retro-shadow-dark);
        animation: fadeIn 0.8s ease-out 0.3s backwards;
        box-sizing: border-box;
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
    }

    .glimmer-list-card h2 {
        font-family: var(--font-heading-retro);
        font-size: 1.8em;
        color: var(--retro-text);
        text-align: center;
        margin-bottom: 1.5em;
        padding-bottom: 0.5em;
        border-bottom: 3px dashed var(--retro-accent-yellow);
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.4);
    }

    .glimmer-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Responsive grid */
        gap: 1.5em;
    }

    .glimmer-item {
        background-color: var(--retro-secondary-light);
        border: 2px solid var(--retro-shadow-dark);
        border-radius: 10px;
        box-shadow: 0.25em 0.25em 0 rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform var(--transition-fast);
        text-align: center;
        padding-bottom: 1em;
    }

    .glimmer-item:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0.4em 0.4em 0 rgba(0, 0, 0, 0.3);
    }

    .glimmer-item img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-bottom: 2px solid var(--retro-shadow-dark);
        margin-bottom: 0.8em;
    }

    .glimmer-item h3 {
        font-family: var(--font-heading-retro);
        font-size: 1.1em;
        color: var(--retro-text);
        margin: 0 0.5em 0.5em;
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2);
    }

    .glimmer-item p {
        font-family: var(--font-primary);
        font-size: 0.9em;
        color: rgba(0, 0, 0, 0.7);
        text-shadow: none;
        margin: 0 0.8em 0.8em;
    }

    .glimmer-item .glimmer-link {
        display: inline-block;
        background-color: var(--retro-accent-yellow);
        color: var(--retro-text);
        font-family: var(--font-heading-retro);
        font-size: 0.8em;
        padding: 0.6em 1em;
        border-radius: 5px;
        border: 2px solid var(--retro-shadow-dark);
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        text-decoration: none;
        transition: all var(--transition-fast);
        text-transform: uppercase;
    }

    .glimmer-item .glimmer-link:hover {
        background-color: var(--retro-accent-red);
        color: var(--retro-secondary-light);
        transform: translateY(-2px);
        box-shadow: 0.3em 0.3em 0 rgba(0, 0, 0, 0.3);
    }

    .no-glimmers-message {
        color: var(--retro-text);
        text-align: center;
        padding: 1.5em;
        font-style: italic;
        font-family: var(--font-primary);
        font-size: 1em;
        text-shadow: none;
        background-color: var(--retro-secondary-light);
        border: 2px dashed var(--retro-shadow-dark);
        border-radius: 10px;
        box-shadow: 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
        margin-top: 1em;
    }

    /* Responsive Adjustments */
    @media (max-width: 992px) {
        .profile-container {
            padding: 2em;
            margin: 1.5rem auto;
        }
        .profile-username {
            font-size: 2em;
        }
        .profile-name {
            font-size: 1.1em;
        }
        .profile-stats {
            gap: 1.5em;
        }
        .profile-stat-item {
            padding: 0.6em 1em;
        }
        .profile-stat-item .count {
            font-size: 1.3em;
        }
        .profile-stat-item .label {
            font-size: 0.75em;
        }
        .profile-action-button {
            font-size: 0.9em;
            padding: 0.7em 1.2em;
        }
        .glimmer-list-card {
            padding: 1.5em;
        }
        .glimmer-list-card h2 {
            font-size: 1.5em;
        }
        .glimmer-list {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1em;
        }
        .glimmer-item h3 {
            font-size: 1em;
        }
        .glimmer-item p {
            font-size: 0.85em;
        }
        .glimmer-item .glimmer-link {
            font-size: 0.75em;
            padding: 0.5em 0.8em;
        }
    }

    @media (max-width: 768px) {
        .profile-container {
            width: 95%;
            padding: 1.5em;
            margin: 1rem auto;
            box-shadow:
                0 0 0 0.1em var(--retro-shadow-dark),
                0 0 0 0.2em var(--retro-secondary-light),
                0 0 0 0.3em var(--retro-shadow-dark),
                0 0.4em 0 0 var(--retro-accent-red),
                0 0.4em 0 0.1em var(--retro-shadow-dark);
        }
        .profile-username {
            font-size: 1.8em;
        }
        .profile-name {
            font-size: 1em;
        }
        .profile-stats {
            flex-direction: column;
            gap: 1em;
        }
        .profile-stat-item {
            width: 80%;
        }
        .profile-action-button {
            font-size: 0.8em;
            padding: 0.6em 1em;
        }
        .glimmer-list-card {
            padding: 1em;
        }
        .glimmer-list-card h2 {
            font-size: 1.3em;
        }
        .glimmer-list {
            grid-template-columns: 1fr; /* Single column on very small screens */
        }
        .glimmer-item img {
            height: 120px;
        }
    }

    @media (max-width: 480px) {
        .profile-container {
            padding: 1em;
            margin: 0.5rem auto;
        }
        .profile-avatar {
            width: 100px;
            height: 100px;
        }
        .profile-username {
            font-size: 1.5em;
        }
        .profile-name {
            font-size: 0.9em;
        }
        .profile-stats {
            gap: 0.8em;
        }
        .profile-stat-item {
            padding: 0.5em 0.8em;
        }
        .profile-stat-item .count {
            font-size: 1.1em;
        }
        .profile-stat-item .label {
            font-size: 0.7em;
        }
        .profile-action-button {
            font-size: 0.7em;
            padding: 0.5em 0.8em;
        }
        .glimmer-list-card h2 {
            font-size: 1.1em;
        }
        .glimmer-item h3 {
            font-size: 0.9em;
        }
        .glimmer-item p {
            font-size: 0.8em;
        }
        .glimmer-item .glimmer-link {
            font-size: 0.7em;
            padding: 0.4em 0.6em;
        }
    }
</style>

<body>
    <div class="profile-container">
        <div class="profile-header">
            <img src="<%= userProfile.avatarUrl || '/images/default-avatar.png' %>" alt="<%= userProfile.username %>'s Avatar" class="profile-avatar">
            <h1 class="profile-username"><%= userProfile.username.toUpperCase() %></h1>
            <% if (userProfile.name) { %>
                <p class="profile-name">(<%= userProfile.name %>)</p>
            <% } %>
            <div class="profile-stats">
                <div class="profile-stat-item">
                    <span class="count"><%= userProfile.hostedGlimmers.length %></span>
                    <span class="label">Hosted Glimmers</span>
                </div>
                <div class="profile-stat-item">
                    <span class="count"><%= userProfile.participatedGlimmers.length %></span>
                    <span class="label">Joined Glimmers</span>
                </div>
                <!-- You can add more stats here, e.g., reviews given, etc. -->
            </div>
            <% if (isCurrentUser) { %>
                <div class="profile-actions">
                    <a href="/users/edit-profile" class="profile-action-button">EDIT PROFILE</a>
                    <!-- Add other personal actions here -->
                </div>
            <% } %>
        </div>

        <div class="glimmer-lists-section">
            <div class="glimmer-list-card">
                <h2>HOSTED GLIMMERS</h2>
                <ul class="glimmer-list">
                    <% if (userProfile.hostedGlimmers && userProfile.hostedGlimmers.length > 0) { %>
                        <% userProfile.hostedGlimmers.forEach(glimmer => { %>
                            <li class="glimmer-item">
                                <img src="<%= glimmer.image && glimmer.image.length > 0 ? glimmer.image[0].url : '/images/default-glimmer.png' %>" alt="<%= glimmer.title %>">
                                <h3><%= glimmer.title.toUpperCase() %></h3>
                                <p><%= glimmer.locationName %></p>
                                <a href="/glimmers/<%= glimmer._id %>" class="glimmer-link">VIEW GLIMMER</a>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <p class="no-glimmers-message">This user hasn't hosted any glimmers yet.</p>
                    <% } %>
                </ul>
            </div>

            <div class="glimmer-list-card">
                <h2>JOINED GLIMMERS</h2>
                <ul class="glimmer-list">
                    <% if (userProfile.participatedGlimmers && userProfile.participatedGlimmers.length > 0) { %>
                        <% userProfile.participatedGlimmers.forEach(glimmer => { %>
                            <li class="glimmer-item">
                                <img src="<%= glimmer.image && glimmer.image.length > 0 ? glimmer.image[0].url : '/images/default-glimmer.png' %>" alt="<%= glimmer.title %>">
                                <h3><%= glimmer.title.toUpperCase() %></h3>
                                <p><%= glimmer.locationName %></p>
                                <a href="/glimmers/<%= glimmer._id %>" class="glimmer-link">VIEW GLIMMER</a>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <p class="no-glimmers-message">This user hasn't joined any glimmers yet.</p>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</body>
