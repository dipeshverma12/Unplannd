<%- layout('layouts/boilerplate') %>

<style>
    body {
        background-color: var(--retro-bg);
        font-family: var(--font-primary);
        color: var(--retro-text);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        text-align: center;
        flex-direction: column;
        padding: 20px;
        box-sizing: border-box;
    }

    .error-container {
        background-color: var(--retro-primary-teal);
        border: 6px solid var(--retro-shadow-dark);
        border-radius: 20px;
        box-shadow: 0.8em 0.8em 0 var(--retro-accent-red);
        padding: 3rem;
        max-width: 600px;
        width: 100%;
        position: relative;
        overflow: hidden;
        z-index: 1;
        animation: bounceIn 0.8s ease-out;
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
    }

    @keyframes bounceIn {
        0% { opacity: 0; transform: translateY(50px) scale(0.8); }
        60% { opacity: 1; transform: translateY(-10px) scale(1.05); }
        100% { transform: translateY(0) scale(1); }
    }

    .error-title {
        font-family: var(--font-heading-retro);
        color: var(--retro-accent-yellow);
        font-size: 4em;
        margin-bottom: 0.5rem;
        text-shadow: 5px 5px 0 var(--retro-shadow-dark);
        line-height: 1;
    }

    .error-message {
        font-family: var(--font-primary);
        color: var(--retro-secondary-light);
        font-size: 1.5em;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
    }

    .btn-retro-home {
        background-color: var(--retro-accent-red);
        color: var(--retro-secondary-light);
        font-family: var(--font-heading-retro);
        font-size: 1.2em;
        padding: 0.8em 1.5em;
        border: 4px solid var(--retro-shadow-dark);
        border-radius: 15px;
        box-shadow: 0.5em 0.5em 0 var(--retro-shadow-dark);
        cursor: pointer;
        transition: all var(--transition-fast);
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-retro-home:hover {
        background-color: var(--retro-accent-yellow);
        color: var(--retro-text);
        transform: translateY(-5px);
        box-shadow: 0.7em 0.7em 0 var(--retro-shadow-dark);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .error-container {
            padding: 2rem;
            box-shadow: 0.6em 0.6em 0 var(--retro-accent-red);
        }
        .error-title {
            font-size: 3em;
        }
        .error-message {
            font-size: 1.2em;
        }
        .btn-retro-home {
            font-size: 1em;
            padding: 0.7em 1.2em;
        }
    }

    @media (max-width: 480px) {
        .error-container {
            padding: 1.5rem;
        }
        .error-title {
            font-size: 2.5em;
        }
        .error-message {
            font-size: 1em;
        }
        .btn-retro-home {
            font-size: 0.9em;
            padding: 0.6em 1em;
        }
    }
</style>

<body>
    <div class="error-container">
        <h1 class="error-title">404</h1>
        <p class="error-message">PAGE NOT FOUND!</p>
        <a href="/hub" class="btn-retro-home">GO TO HOME</a>
    </div>
</body>